<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/icono"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/icono"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icono"
        android:id="@+id/codigo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Codigo:"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icono"
        android:layout_below="@id/codigo"
        android:id="@+id/nombre"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="DescripciÃ³n:"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/nombre"
        android:id="@+id/telefono"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Tel.:"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/credito"
        android:layout_toRightOf="@id/nombre"
        android:layout_below="@id/telefono"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Credito: $ "/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/credito"
        android:id="@+id/txttelefono"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Disp:"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtcredito"
        android:layout_toRightOf="@id/credito"
        android:layout_below="@id/txttelefono"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Order:"/>

</RelativeLayout>