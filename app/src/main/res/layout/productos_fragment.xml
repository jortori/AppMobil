<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:srcCompat="@drawable/logo"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUSQUEDA DE PRODUCTO"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/labels_size"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtproducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:backgroundTint="@color/red"
        android:textSize="@dimen/labels_size"
        android:hint="DescripciÃ³n de producto"
        android:layout_below="@id/textView3"
        />

    <Button
        android:id="@+id/SearchProducts"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BUSCAR PRODUCTOS"
        android:layout_marginTop="20dp"
        android:background="@color/blue"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/txtproducts" />

    <ListView
        android:id="@+id/ProductList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BUSCAR PRODUCTOS"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/SearchProducts" />



</RelativeLayout>