<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:srcCompat="@drawable/logo"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USUARIO"
        android:textSize="@dimen/labels_size"
        android:layout_below="@id/logo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/usuariovisitreport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRES"
        android:textSize="@dimen/labels_size"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUSQUEDA DE VISITAS"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/labels_size"
        android:layout_below="@id/usuariovisitreport"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/item1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="MES: "
        android:layout_marginTop="20dp"
        android:textSize="@dimen/labels_size"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/textView3" />

    <Spinner
        android:id="@+id/txtitem1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="PROFESION DEL CONTACTO"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/labels_size"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/textView3"
        android:layout_toRightOf="@id/item1"/>

    <TextView
        android:id="@+id/item2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="AÃ‘O: "
        android:layout_marginTop="20dp"
        android:textSize="@dimen/labels_size"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/txtitem1" />

    <Spinner
        android:id="@+id/txtitem2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="PROFESION DEL CONTACTO"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/labels_size"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/txtitem1"
        android:layout_toRightOf="@id/item1"/>

    <Button
        android:id="@+id/SearchVisits"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="GENERAR REPORTE"
        android:layout_marginTop="20dp"
        android:background="@color/blue"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/txtitem2" />

    <ListView
        android:id="@+id/VisitList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BUSCAR PRODUCTOS"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/SearchVisits" />



</RelativeLayout>